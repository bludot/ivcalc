{
  "name": "ivcalc",
  "version": "1.0.0",
  "description": "Individual Value & Stat Calculator",
  "main": "src/index.html",
  "scripts": {
    "scss": "node-sass --output-style nested --indent-type space --indent-width 2 -o src -r src/scss",
    "autoprefixer": "postcss -u autoprefixer -o src/main.css src/main.css",
    "build:css": "npm run scss && npm run autoprefixer",
    "watch:css": "onchange 'src/scss/*.scss' -- npm run build:css",
    "browserify": "browserify src/js/main.js -o src/bundle.js",
    "uglify": "uglify",
    "build:js": "npm run browserify",
    "watch:js": "onchange 'src/js/*.js' -- npm run build:js",
    "serve": "browser-sync start --server src --files 'src/main.css, src/bundle.js'",
    "dev": "parallelshell 'npm run serve' 'npm run watch:css' 'npm run watch:js'",
    "start": "start the damn dist task"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kootoopas/ivcalc.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/kootoopas/ivcalc/issues"
  },
  "homepage": "https://github.com/kootoopas/ivcalc#readme",
  "devDependencies": {
    "node-sass": "^3.8.0",
    "onchange": "^2.5.0",
    "parallelshell": "^2.0.0",
    "uglify-js": "^2.6.4"
  }
}
